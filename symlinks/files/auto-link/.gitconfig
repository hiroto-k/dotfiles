[user]
    name = Hiroto Kitazawa
    email = hiroxto@gmail.com
[color]
    ui = auto
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[core]
    excludesfile = ~/.gitignore_global
    quotepath = false
    editor = vim
    autocrlf = false
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[alias]
    amend = commit --amend
    branches = branch -a
    difff = diff --name-only
    diffs = diff --cached
    remotes = remote -v
    tags = tag
    graph = log --all --graph --oneline --decorate
    pushf = push --force-with-lease --force-if-includes
[http]
    sslVerify = false
[init]
    defaultBranch = main
[pager]
    branch = cat
[include]
    path = ~/.gitconfig.local
